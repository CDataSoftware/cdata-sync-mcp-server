# CData Sync MCP Server Configuration
# Copy this file to .env and update with your values

# CData Sync API Configuration
CDATA_BASE_URL=http://localhost:8181/api.rsc

# Workspace Configuration (optional)
# Specify the workspace UUID to scope all operations to a specific workspace
# CDATA_WORKSPACE=your-workspace-uuid-here

# Authentication (use either token OR username/password)
CDATA_AUTH_TOKEN=your-auth-token-here
# OR use basic auth:
# CDATA_USERNAME=admin
# CDATA_PASSWORD=your-password

# Transport Configuration
# Options: stdio (default), http, both
MCP_TRANSPORT_MODE=stdio

# HTTP Transport Configuration
# Port for HTTP transport (when using http or both mode)
MCP_HTTP_PORT=3000

# SSE Debug Server Configuration
# Port for debug event server (optional, only with stdio or both mode)
SSE_PORT=3001

# Disable SSE debug server entirely (useful for Claude Desktop)
DISABLE_SSE=false

# Environment
NODE_ENV=production

# Logging
# LOG_LEVEL=info